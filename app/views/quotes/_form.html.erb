<%= simple_form_for quote, html: { class: "quote form" } do |f| %>
  <% if quote.errors.any? %>
    <div class="error-message">
      <%= quote.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>
  <%= f.text_field :author%>
  <%= f.text_field :content%>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>
